<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileBDG.Home">
    <StackLayout Style="{DynamicResource PainelPrincipal}" Orientation="Vertical" HorizontalOptions="FillAndExpand">
        <SearchBar x:Name="BarraBusca" BackgroundColor="LightGray" TextChanged="BarraBusca_TextChanged" ></SearchBar>
        <ListView IsPullToRefreshEnabled="True" Refreshing="ListaHome_Refreshing" ItemTapped="ListaHome_ItemTapped" x:Name="ListaHome">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding PhotoUrl}" Text="{Binding Name}" Detail="{Binding Function}">
                        <ImageCell.ContextActions>
                            <MenuItem Text="Teste" ></MenuItem>
                        </ImageCell.ContextActions>
                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>